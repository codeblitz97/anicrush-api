{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./build",
    "pretty": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_module", "build"]
}
